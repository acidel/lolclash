include header
include footer
include teamlist
include teamlistsmall
include listbrowser
include popular
include adh
include adright
extends layout
block content
    div#screencontainer
        div#content
            +header()
            div#wrapper
                    div#leftcontainer
                        div#path
                            h1
                                a(href= '/')
                                    ="Home"
                                =" / "
                                a(href= '/teams/')
                                    ="Teams"
                        div.contenthugeheader.headersplit.hbg2(style="margin-bottom: 6px;")
                            h1
                                ="Teams"
                        +teamlistsmall(naTeams, "N")
                        +teamlistsmall(euTeams, "E")
                        +teamlistsmall(koreaTeams, "K")
                        +teamlistsmall(chinaTeams, "C")
                        +teamlistsmall(seaTeams, "A")
                        div.clearboth
                        div.grey.smallmargin
                            ="Teams are added after 15 ranked games - for more information on the LoLClash rankings "
                            a(href="/Creating-a-rating-system-for-LoL")
                                ="Click here"
                        +teamlist(teams, page)
                        div.smallmargin
                        +listbrowser('/teams/', count, 15, page)
                        div.smallmargin
                        div#adh
                            +adh()
                    div#rightcontainer
                        +popular()
                        div#ad1
                            +adright()
    +footer()
    