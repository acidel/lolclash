include header
include footer
include teamlist
include matchlist
include popular
include adright
include adh
extends layout
block content
	script(src="/hidespoiler.js" type="text/javascript")
	script(src="/timechange.js" type="text/javascript")
	div#screencontainer
		div#content
			+header()
			div#wrapper
				div
					div#landing
				div#leftcontainer
					div.contentlargeheader.headerborder.smallmargin
						h1 EVENT VODS
					div#tourneylist.smallmargin
						ul
							each tourney, i in tourneys
									li
										div.tbox1
											a(href='/vods/' + tourney.url)
												div.logo150.tbox1(style='background: url(/img/event-logo/3/' + tourney.logos[3] + ') no-repeat 50% 50%')
										div.tbox2
											h1
												=tourney.name.slice(0,21)

											h1.gold
												if (tourney.startDate)
														=tourney.startDate.toDateString().slice(4,10)
													=" - "
													if (tourney.endDate)
														=tourney.endDate.toDateString().slice(4,10)
											p
												=tourney.description
													div.button
														h1
															="VoDs and Schedule"
						div.clearboth
					h1.center.smallmargin
							a.center(href='/vods/')
								div.showmore.center.dbg3(style="font-size: 18px;")
									="All event VoDs..."
					div.contentlargeheader.headerborder
						h1 RECENT MATCHES
					div#matchlist.smallmargin.headerborder
						+matchlist(results)
					h1.center.smallmargin
							a.center(href='/results/')
								div.showmore.center.dbg2(style="font-size: 18px;")
									="All recent results..."
					div#adh
						+adh()
				div#rightcontainer
					div#ad1
						+adright()

	+footer()



